package loop;

public class WhileEx2 {

	public static void main(String[] args) {
		// 반복 조건문(while ~ if ~ break)
		int n = 1;
		/*
		while(true) {
			if(n > 10) {
				break;
			}
			System.out.println(n);
			n++;
		}
		*/
		
		int sum = 0;
		double avg;
		
		while(true) {
			sum += n;
			n++;
			if(n > 10) break;
		}
		
		avg = sum / (n - 1);
		
		System.out.println("총합 : " + sum);
		System.out.println("평균 : " + avg);

	}
}
